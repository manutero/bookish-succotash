{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "red-line.js",
        "style-sheet.js",
        "index-pointer.js",
        "words-collector.js",
        "auto-completion-box.js",
        "key-actions.js",
        "autocomplete.js"
      ]
    }
  ]
}
